<link rel="stylesheet" type="text/css" href="/vendor/webuploader/webuploader.css">

<style>
  
  #container {
    color: #838383;
    font-size: 12px;
}

</style>
<br>
<div class="container">

<ol class="breadcrumb">
        <li><a href="/">主页</a><span class="divider"></span></li>
        
        <li class="active">发布话题</li>
        
      </ol>
  <h1>发照片</h1>

<form method="post" action="/create-photo" class="form" >
<p>分类：
<select>
   <option value="0" >请选择</option>

  {{#each category}}
   <option value="{{name}}" >{{text}}</option>
  {{/each}}
</select>
</p>
  <p><input class="form-control" type="text" name="title" placeholder="标题" /></p>
<br>
<p><input class="form-control" type="text" name="discrib" placeholder="简介" /> </p>

<!-- <p><input class="form-control" type="text" name="tage" placeholder="标签" /> </p>
 -->

 <div class="page-container">
    <input type="hidden" id="domain" value="{{Domain}}">
        <input type="hidden" id="uptoken_url" value="{{Uptoken_Url}}">
 <div class="col-md-12">
            <div id="container">
                <a class="btn btn-default btn-lg " id="pickfiles" href="#" >
                    <i class="glyphicon glyphicon-plus"></i>
                    <span>选择图片</span>
                </a>
            </div>
        </div>

        <div style="display:none" id="success" class="col-md-12">
            <div class="alert-success">
                队列全部文件处理完毕
            </div>
        </div>
        <div class="col-md-12 ">
            <table class="table table-striped table-hover text-left"   style="margin-top:40px;display:none">
                <thead>
                  <tr>
                    <th class="col-md-4">Filename</th>
                    <th class="col-md-2">Size</th>
                    <th class="col-md-6">Detail</th>
                  </tr>
                </thead>
                <tbody id="fsUploadProgress">
                </tbody>
            </table>
        </div>


    </div>
  

</div>

<p><button class="pull-center btn btn-success btn-large" type="submit">发布</button> </p>
</form>


</div>


<!--引入JS-->
<script type="text/javascript" src="/vendor/qiniu/qiniu.js"></script>
