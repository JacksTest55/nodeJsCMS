<link rel="stylesheet" type="text/css" href="/vendor/webuploader/webuploader.css">

<div class="container">
  <h1>发照片</h1>

<form method="post" action="/create-aticle" class="form">
  <p><input class="form-control" type="text" name="title" placeholder="标题" /></p>
  <p><textarea class="form-control" name="content" id="" cols="3" rows="10">内容
  </textarea></p>







  <p><button class="btn btn-success " type="button">发布</button>
  </p>

  <div id="uploader" class="wu-example">
    <!--用来存放文件信息-->
    <div id="thelist" class="uploader-list"></div>
    <div class="btns">
        <div id="picker">选择文件</div>
        <button id="ctlBtn" class="btn btn-default" type="button">开始上传</button>
    </div>
</div>


</form>

</div>


<!--引入JS-->
<script type="text/javascript" src="/vendor/webuploader/webuploader.js"></script>

<script>

var uploader = WebUploader.create({
    // swf文件路径
    swf: '/vendor/webuploader/Uploader.swf',
    // 文件接收服务端。
    server: 'api/v1/upload',
    // 选择文件的按钮。可选。
    // 内部根据当前运行是创建，可能是input元素，也可能是flash.
    pick: {
      id:'#picker',
      multiple :false
    },
    accept: {
        title: 'Doc',
        extensions: 'doc,docx',
        mimeTypes: 'application/msword'
    },
    fileVal :'doc',// {Object} [可选] [默认值：'file']设置文件上传域的name。
    formData:{
      type:'doc'
    }
});

uploader.on('beforeFileQueued',function(){

uploader.reset();


})

// 当有文件被添加进队列的时候
uploader.on( 'fileQueued', function( file ) {



  console.log(uploader.getFiles())

    $('#thelist').html( '<div id="' + file.id + '" class="item">' +
        '<h4 class="info">' + file.name + '</h4>' +
        '<p class="state">' + parseInt(file.size/1024) + 'KB,等待上传...</p>' +
    '</div>' );
});

$('#ctlBtn').on('click',function(){
  uploader.upload()
})

  
</script>
